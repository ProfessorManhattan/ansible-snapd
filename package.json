{
  "name": "@installdoc/ansible-snapd",
  "version": "0.0.1",
  "description": "Ensures Snap is installed and properly configured on Linux systems",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorManhattan/ansible-snapd.git"
  },
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/ansible-roles/snapd/-/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "clean": "task common:clean",
    "commit": "task common:commit",
    "info": "task --list",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "task common:husky",
    "prepare-release": "task common:prepare-release",
    "requirements": "task common:requirements",
    "reset": "task common:reset",
    "reset-force": "task common:reset-force",
    "update": "task common:update"
  },
  "keywords": [
    "ansible",
    "archlinux",
    "centos",
    "debian",
    "doctor",
    "fedora",
    "install",
    "installation",
    "installdoc",
    "installdoctor",
    "linux",
    "macos",
    "megabytelabs",
    "molecule",
    "package",
    "professormanhattan",
    "role",
    "snap",
    "snapd",
    "software",
    "ubuntu",
    "windows"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@megabytelabs/prettier-config": "^14.14.14",
    "@prettier/plugin-xml": "^1.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-editorconfig": "^3.0.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jsonc": "^1.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-yml": "0.10.1"
  },
  "blueprint": {
    "description": "Ensures Snap is installed and properly configured on Linux systems",
    "overview": "[Snap](https://snapcraft.io/) is a software packaging and deployment system developed by Canonical for operating systems that use the Linux kernel. The packages, called snaps, and the tool for using them, snapd, work across a range of Linux distributions and allow upstream software developers to distribute their applications directly to users. Snaps are self-contained applications running in a sandbox with mediated access to the host system.",
    "name": "Snap",
    "repository": {
      "github": "https://github.com/ProfessorManhattan/ansible-snapd",
      "gitlab": "https://gitlab.com/megabyte-labs/ansible-roles/snapd"
    },
    "slug": "snapd",
    "title": "Snap - A Linux Package Manager"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.(js|jsx|ts)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ],
    "requirements.txt": [
      "requirements-txt-fixer"
    ],
    "**/*.py": [
      "black",
      "flake8"
    ],
    "**/*vault.yml": [
      "task ansible:vault:lint:file --"
    ]
  },
  "prettier": "@megabytelabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
